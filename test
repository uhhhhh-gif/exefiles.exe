using System;
using System.Drawing;
using System.Windows.Forms;

public class RainbowLinesForm : Form
{
    private Random random;

    public RainbowLinesForm()
    {
        this.Text = "Rainbow Lines Explosion";
        this.Width = 800;
        this.Height = 600;
        this.DoubleBuffered = true;
        this.Paint += new PaintEventHandler(this.OnPaint);
        this.random = new Random();
    }

    protected override void OnPaint(PaintEventArgs e)
    {
        base.OnPaint(e);
        Graphics g = e.Graphics;

        for (int i = 0; i < 1000; i++)
        {
            int x1 = random.Next(this.Width);
            int y1 = random.Next(this.Height);
            int x2 = random.Next(this.Width);
            int y2 = random.Next(this.Height);
            Color randomColor = Color.FromArgb(random.Next(256), random.Next(256), random.Next(256));
            Pen pen = new Pen(randomColor);
            g.DrawLine(pen, x1, y1, x2, y2);
        }
    }

    [STAThread]
    public static void Main()
    {
        Application.EnableVisualStyles();
        Application.SetCompatibleTextRenderingDefault(false);
        Application.Run(new RainbowLinesForm());
    }
}